<%- include("partials/header") -%>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="postTitle">Title</label>
            <input class="form-control" type="text" name="postTitle">
        </div>
        <div class="form-group">
            <label for="postText">Post</label>
            <textarea class="form-control" type="text" name="postBody" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" name="button">Publish</button>
    </form>

    <%- include("partials/footer") -%>